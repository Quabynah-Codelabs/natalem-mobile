<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="NatalemTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/app_scrim</item>
    </style>

    <style name="NatalemTheme.Button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconPadding">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="NatalemTheme.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFeatureSettings">smcp,onum</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="NatalemTheme.Desc" parent="NatalemTheme.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

</resources>
